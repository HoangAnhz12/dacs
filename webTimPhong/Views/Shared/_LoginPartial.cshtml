@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"
                   role="button" aria-haspopup="true" ariaexpanded="false">@User.Identity.Name.ToString() <span class="caret"></span></a>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    @if (User.IsInRole("Admin"))
                    {
                        <li> <a href="/Room/Add">Đăng tin</a></li>
                        <li> <a href="/Room/Index">Danh sách bài đăng</a></li>
                        <li> <a href="/Admin/Home">Trang quản lý admin</a></li>
                        <li role="separator" class="divider"> </li>
                    }
                    else
                    {
                        <li> <a href="/Room/Add">Đăng tin</a></li>
                        <li> <a href="/Room/Index">Danh sách bài đăng</a></li>
                        <li role="separator" class="divider"> </li>

                    }
                    <li>
                        <a href="javascript:document.getElementById('logoutForm').submit()">Đăng xuất</a>
                    </li>
                </ul>
            </li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Đăng Ký", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Đăng Nhập", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
